{
  "manifest_version": 3,
  "name": "YouTube RAG Search",
  "version": "1.0.0",
  "description": "Tìm kiếm ngữ nghĩa và hỏi đáp với video YouTube.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mở YouTube RAG Search",
    "default_icon": "images.png"
  },
  "icons": {
    "128": "images.png"
  }
}